{
  "name": "piano-practice-app",
  "version": "1.0.0",
  "description": "MIDI対応ピアノ練習用Webアプリケーション",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/bundle.js --format=iife --platform=browser --target=es2020 --main-fields=module,main && cp src/index.html dist/index.html && cp sample-song.json dist/sample-song.json",
    "dev": "esbuild src/index.ts --bundle --outfile=dist/bundle.js --format=iife --platform=browser --target=es2020 --watch",
    "serve": "http-server dist --cors",
    "test": "jest"
  },
  "dependencies": {
    "tone": "^14.7.77"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.14",
    "@types/web": "^0.0.99",
    "esbuild": "^0.25.10",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "piano",
    "midi",
    "music",
    "practice",
    "tone.js"
  ],
  "author": "",
  "license": "MIT"
}
